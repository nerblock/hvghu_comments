{
  "name": "hvg.hu hozzászólások",
  "short_name": "hvgcomments",
  "version": "1.0.0",
  "manifest_version": 2,
  "author": "nerblock",
  "description": "Engedélyezi a hozzászólást a hvg.hu olyan cikkeinél, ahol a hozzászólási lehetőség egyébként ki van kapcsolva.",
  "permissions": ["http://*.hvg.hu/", "https://*.hvg.hu/"],
  "content_scripts": [
    {
      "matches": ["http://*.hvg.hu/*", "https://*.hvg.hu/*"],
      "js": ["hvghu_comments.js"],
      "css": ["hvghu_comments.css"],
      "run_at": "document_start"
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "images/icon32.png",
      "20": "images/icon32.png",
      "25": "images/icon32.png",
      "30": "images/icon32.png",
      "35": "images/icon48.png",
      "38": "images/icon48.png",
      "40": "images/icon48.png",

      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "19": "images/icon32.png",
    "20": "images/icon32.png",
    "25": "images/icon32.png",
    "30": "images/icon32.png",
    "35": "images/icon48.png",
    "38": "images/icon48.png",
    "40": "images/icon48.png",

    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
